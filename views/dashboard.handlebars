<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Welcome to your dashboard, {{user.name}}!</h2>
        </div>
    </div>

    {{> post_form}}

    {{#if user.posts.length}}
    <div class="row">
        <div class="col-12">
            <h4>Your Posts</h4>
        </div>
    </div>
    {{#each user.posts as |post|}}
    {{> original_post button=true dashboard=true}}
    {{/each}}
    {{else}}
    <div class="row">
        <div class="col-12">
            <h4>You haven't posted anything yet!</h4>
        </div>
    </div>
    {{/if}}
</div>
<script src="/js/post.js"></script>