<div class="row my-4">
    <div class="col-12">
        <div class="card border-dark">
            <div class="card-header bg-dark">
                <h3 class="text-light font-italic">
                    <span>{{title}}</span>
                </h3>
                <h6 class="text-light">
                    <span>Posted by: {{user.name}},</span>
                    <span>{{format_date date_created}}</span>
                </h6>
            </div>
            <div class="card-body">
                <p>
                    {{text}}
                </p>
                {{#if button}}
                <button type="button" class="btn btn-dark">
                    <a href="/post/{{id}}" class="text-light">Read More</a>
                </button>
                {{/if}}
            </div>
        </div>
    </div>
</div>